<lxs>
    <scene root="deliveryRoot" axis_length="5"/>

    <!-- Cameras -->
    <views default="defaultCamera">

        <perspective id="defaultCamera" near="0.1" far="100" angle="45">
            <from x="15" y="20" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>

    </views>

    <!-- Ambient Light-->
    <globals>
        <ambient r="0.5" g="0.5" b="0.6" a="1.0" />
        <background r="1" g="1" b="0.85" a="1.0" />
    </globals>

    <!-- Other Lights-->
    <lights>
        <omni id="mainLightOmni" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

    </lights>

    <textures>
        <texture id="boardTexture" file="scenes/images/BoardTexture.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.3" g="0.3" b="0.3" a="1" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
    </transformations>

    <animations>


    </animations>


    <primitives>
        <primitive id="Rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="Plane">
            <plane npartsU="5" npartsV="8" />
        </primitive>

        <primitive id="Triangle">
            <triangle x1="0" y1="0" z1="-0.5" x2="0.5" y2="0" z2="0.5" x3="-0.5" y3="0" z3="0.5" />
        </primitive>
    </primitives>

    <components>

        <component id="CubeSideUp">
            <transformation>
                <translate x="0" y="0.5" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Plane" />
            </children>
        </component>
        <component id="CubeSideDown">
            <transformation>
                <rotate axis="x" angle="180" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Plane" />
            </children>
        </component>
        <component id="CubeSide1">
            <transformation>
                <translate x="0" y="0.25" z="0.25" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Plane" />
            </children>
        </component>
        <component id="CubeSide2">
            <transformation>
                <translate x="0" y="0.25" z="-0.25" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Plane" />
            </children>
        </component>
        <component id="CubeSide3">
            <transformation>
                <translate x="0.25" y="0.25" z="0" />
                <rotate axis="z" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Plane" />
            </children>
        </component>
        <component id="CubeSide4">
            <transformation>
                <translate x="-0.25" y="0.25" z="0" />
                <rotate axis="z" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Plane" />
            </children>
        </component>

        <component id="Cube">
            <transformation>
                <scale x="10" y="10" z="10" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="CubeSideUp" />
                <componentref id="CubeSideDown" />
                <componentref id="CubeSide1" />
                <componentref id="CubeSide2" />
                <componentref id="CubeSide3" />
                <componentref id="CubeSide4" />
            </children>
        </component>

        <!--    Cube    -->

        <component id="FinUp">
            <transformation>
                <translate x="0" y="0.25" z="0" />
                <rotate axis="x" angle="180" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Triangle" />
            </children>
        </component>

        <component id="FinDown">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Triangle" />
            </children>
        </component>

        <component id="Fin">
            <transformation>
               <!--<scale x="10" y="10" z="10" />-->
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="FinDown" />
                <componentref id="FinUp" />
            </children>
        </component>
        <!--    Fin     -->

        <!-- BOARD -->
        <component id="Side Board Base">
            <transformation>
                <translate x="0" y="-0.25" z="5"/>
                <scale x="10" y="0.5" z="10"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>

        <component id="Side Board 1">
            <transformation>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Side Board Base" />
            </children>
        </component>

        <component id="Side Board 2">
            <transformation>
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Side Board Base" />
            </children>
        </component>

        <component id="Side Board 3">
            <transformation>
                <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Side Board Base" />
            </children>
        </component>

        <component id="Side Boards Elevated">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="boardTexture" length_s="0.2" length_t="5"/>
            <children>
                <componentref id="Side Board Base" />
                <componentref id="Side Board 1" />
                <componentref id="Side Board 2" />
                <componentref id="Side Board 3" />
            </children>
        </component>


        <component id="Outside Board">
            <transformation>
                <translate x="0" y="-0.25" z="-10"/>
                <scale x="20" y="0.5" z="20"/>
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>

        <component id="Outside Board 2">
            <transformation>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Outside Board" />
            </children>
        </component>


        <component id="Outside Board 3">
            <transformation>
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Outside Board" />
            </children>
        </component>


        <component id="Outside Board 4">
            <transformation>
                <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Outside Board" />
            </children>
        </component>


        <component id="Board Root">
            <transformation>
                <scale x="10" y="10" z="10"/>
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>

        <component id="Part 1 Elevated Board">
            <transformation>
                <translate x="-5" y="0.5" z="-5"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Board Root"/>
                <componentref id="Side Boards Elevated"/>
            </children>
        </component>

        <component id="Part 2 Elevated Board">
            <transformation>
                <translate x="5" y="0.5" z="5"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Board Root"/>
                <componentref id="Side Boards Elevated"/>
            </children>
        </component>

        <component id="Part 3 Board">
            <transformation>
                <translate x="5" y="0" z="-5"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Board Root"/>
            </children>
        </component>

        <component id="Part 4 Board">
            <transformation>
                <translate x="-5" y="0" z="5"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Board Root"/>
            </children>
        </component>

        <component id="Base Of Board">
            <transformation>
                <translate x="0" y="-0.5" z="0"/>
                <scale x="20" y="20" z="20"/>
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="boardTexture" length_s="0.5" length_t="0.5"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>

        <component id="All Boards Outside">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="boardTexture" length_s="0.2" length_t="10"/>
            <children>
                <componentref id="Outside Board"/>
                <componentref id="Outside Board 2"/>
                <componentref id="Outside Board 3"/>
                <componentref id="Outside Board 4"/>
            </children>
        </component>

        <component id="Board">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="boardTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="Base Of Board" />
                <componentref id="Part 1 Elevated Board" />
                <componentref id="Part 2 Elevated Board" />
                <componentref id="Part 3 Board" />
                <componentref id="Part 4 Board" />
                <componentref id="All Boards Outside"/>
            </children>
        </component>

        <!-- END OF BOARD -->

        <component id="deliveryRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
               <!-- <componentref id="Board" />-->
               <!-- <componentref id="Cube" />-->
                <componentref id="Fin" />
            </children>
        </component>

    </components>
</lxs>