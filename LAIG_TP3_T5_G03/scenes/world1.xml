<lxs>
    <scene root="deliveryRoot" axis_length="5"/>

    <!-- Cameras -->
    <views default="defaultCamera">

        <perspective id="defaultCamera" near="0.1" far="100" angle="45">
            <from x="15" y="20" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>

    </views>

    <!-- Ambient Light-->
    <globals>
        <ambient r="0.5" g="0.5" b="0.6" a="1.0" />
        <background r="1" g="1" b="0.85" a="1.0" />
    </globals>

    <!-- Other Lights-->
    <lights>
        <omni id="mainLightOmni" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

    </lights>

    <textures>
        <texture id="galaxy" file="scenes/images/galaxy+X.png" />
        <texture id="glitter" file="scenes/images/glitter.jpg" />
        <texture id="glitter2" file="scenes/images/glitter2.jpg" />
        <texture id="glitter3" file="scenes/images/glitter3.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.3" g="0.3" b="0.3" a="1" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
    </transformations>

    <animations>

        <animation id="RainAnimation">
            <keyframe instant = "5">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant = "10">
                <translate x="0" y="-25" z="0" />
                <rotate angle_x="360" angle_y="0" angle_z="360" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant = "45">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="-360" angle_y="0" angle_z="-360" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant = "55">
                <translate x="0" y="-25" z="0" />
                <rotate angle_x="360" angle_y="0" angle_z="360" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant = "85">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="-360" angle_y="0" angle_z="-360" />
                <scale x="1" y="1" z="1" />
            </keyframe>

        </animation>

    </animations>


    <primitives>
        <primitive id="Rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="Triangle">
            <triangle x1="0.5" y1="-0.35" z1="-0.35" x2="1.2" y2="0.35" z2="-0.35" x3="0.5" y3="0.35" z3="0.35" />
        </primitive>="-0.3" y1="0" z1="-0.3" x2="0" y2="0.4" z2="0" x3="0.3" y3="0" z3="-0.3" />

        <primitive id="Cone">
            <cylinder base="2" top="0" height="2" slices="20" stacks="20" />
        </primitive>

        <primitive id="Cylinder">
            <cylinder base="2" top="2" height="2" slices="20" stacks="20" />
        </primitive>

        <primitive id="Cylinder2">
            <cylinder2 base="0.5" top="0.5" height="1" slices="50" stacks="5" />
        </primitive>

        <primitive id="Sphere">
            <sphere radius="2" slices="10" stacks="10" />
        </primitive>

        <primitive id="Torus">
            <torus inner="1" outer="3" slices="20" loops="20" />
        </primitive>

        <primitive id="Plane">
            <plane npartsU="5" npartsV="8" />
        </primitive>
    </primitives>

