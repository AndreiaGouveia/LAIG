<lxs>
    <scene root="deliveryRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <!-- colocar global em vez de ambiente-->
    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="0">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/rocks.jpg" />
        <texture id="donut" file="scenes/images/donut.jpg" />
        <texture id="chapeu" file="scenes/images/chapeu.jpg" />
        <texture id="olho" file="scenes/images/eye.jpg" />
        <texture id="grass" file="scenes/images/grass.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="1.0" g="1.0" b="1.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="black" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="Rectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="Triangle">
            <triangle x1="0" y1="0" z1="0" x2="1" y2="0" z2="0" x3="0" y3="1" z3="0" />
        </primitive>

        <primitive id="Cylinder">
            <cylinder base="2" top="2" height="2" slices="20" stacks="20" />
        </primitive>

        <primitive id="Sphere">
            <sphere radius="2" slices="10" stacks="10" />
        </primitive>

        <primitive id="Torus">
            <torus inner="1" outer="3" slices="20" loops="20" />
        </primitive>


    </primitives>

    <components>
    <!-- Donut formation-->

       <!-- Eye component-->

        <component id="Eye2">
            <transformation>
                <translate x="-5" y="10" z="-20" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="black" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
               <primitiveref id="Sphere" />
            </children>
        </component>

         <component id="Eye1">
            <transformation>
                  <translate x="5" y="10" z="-20" />
                  <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="black" />
            </materials>
                <texture id="inherit" length_s="1" length_t="1"/>
            <children>
               <primitiveref id="Sphere" />
            </children>
        </component>

         <component id="Eyes">
            <transformation>
                <rotate axis="x" angle="90" />
                <scale x="0.25" y="0.25" z="0.25" />
            </transformation>
            <materials>
                <material id="black" />
            </materials>
                <texture id="olho" length_s="1" length_t="1"/>
            <children>
                <componentref id="Eye2" />
                <componentref id="Eye1"/>
            </children>
        </component>

        <!-- Hat Component-->

         <component id="hat">
            <transformation>
                <translate x="0" y="7" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="black" />
            </materials>
            <texture id="chapeu" length_t="5"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

        <!-- Arms and legs -->

        <component id="Arm1">
            <transformation>
                <translate x="0" y="7" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="black" />
            </materials>
            <texture id="inherit" length_s= "1" length_t="1"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

        <component id="Arm2">
            <transformation>
                <translate x="0" y="7" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="black" />
            </materials>
            <texture id="inherit" length_s= "1" length_t="1"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

        <component id="Arms">
            <transformation>
                <rotate axis="x" angle="90" />
                <scale x="0.25" y="0.25" z="0.25" />
            </transformation>
            <materials>
                <material id="black" />
            </materials>
                <texture id="donut" length_s="1" length_t="1"/>
            <children>
                <componentref id="Arm1"/>
                <componentref id="Arm2"/>
            </children>
        </component>

        <component id="Leg1">
            <transformation>
                <translate x="-24" y="0" z="0" />
                <!--<rotate axis="x" angle="45" />-->
            </transformation>
            <materials>
                <material id="black" />
            </materials>
            <texture id="inherit" length_s= "1" length_t="1"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

        <component id="Leg2">
            <transformation>
                <translate x="24" y="0" z="0" />
                <!--<rotate axis="x" angle="-45" />-->
            </transformation>
            <materials>
                <material id="black" />
            </materials>
            <texture id="inherit" length_s= "1" length_t="1"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

        <component id="Legs">
            <transformation>
                <translate x="0" y="3" z="0" />
                <scale x="0.15" y="0.15" z="2" />
                <rotate axis="x" angle="45" />
            </transformation>
            <materials>
                <material id="black" />
            </materials>
                <texture id="donut" length_t="5"/>
            <children>
                <componentref id="Leg1"/>
                <componentref id="Leg2"/>
            </children>
        </component>
        
        <!--Donut component-->

         <component id="Donut">
            <transformation>
                <translate x="0" y="3" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="donut" length_t="5"/>
            <children>
                <primitiveref id="Torus" />
            </children>
        </component>

        <component id="finalDonut">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="1"/>
            <children>
                <componentref id="Donut" />
                <componentref id="Eyes" />
                <componentref id="hat" />
                <componentref id="Legs" />
               <!--<componentref id="Arms" />-->
            </children>
        </component>
    <!--Floor Component-->

         <component id="floor">
            <transformation>
                <translate x="0" y="-1" z="0" />
                <scale x="60" y="60" z="60" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="grass" length_s ="1" length_t="1"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>

    <!-- Other Component-->

         <component id="deliveryRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
                <texture id="donut" length_s="1" length_t="1"/>
            <children>
                <componentref id="finalDonut" />
                <componentref id="floor" />
            </children>
        </component>


    </components>
</lxs>